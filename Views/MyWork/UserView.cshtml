@model IEnumerable<KhumaloCraft.Models.MyWorkModel>

@{
    ViewData["Title"] = "UserView";
}

<h1>UserView</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                In Stock?
            </th>
            <th>
                Imag
            </th>
            <th>
                Category ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
