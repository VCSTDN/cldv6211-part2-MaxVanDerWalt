@model KhumaloCraft.ModelViews.CartsModelView

<h2>Confirm Your Order</h2>
<div>
    <h3>Items</h3>
    <ul>
        @foreach (var item in Model.CartItems)
        {
            <li>@item.WorkName -  @item.Price </li>
        }
    </ul>
    <p><strong>Total: R @Model.CartTotal</strong></p>
</div>

<form asp-controller="Checkout" asp-action="CreateOrder" method="post">

    <button type="submit" class="btn btn-success">Place Order</button>
</form>
<br />
<!--Moved out of form to avoid submitting it-->
<a asp-controller="Carts" asp-action="ViewCart" class="btn btn-warning">Return to Cart</a>
